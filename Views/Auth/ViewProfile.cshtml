@{
    ViewData["Title"] = "View Profile";
}

<script src="~/js/auth/viewProfile.js" type="module" defer></script>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 col-xl-5">
            <div class="card my-5 shadow-lg border-0">
                <div class="card-body my-3">
                    <h2 class="card-title text-center text-primary">My Profile</h2>

                    <div class="d-flex justify-content-center align-items-center my-4">
                        <img id="profilePicture" src="" alt="Profile Picture" class="rounded-circle border" style="display:none; width:200px; height:200px;" />
                    </div>

                    <div class="my-3 p-2 d-flex flex-column gap-2">
                        <div class="row ms-2">
                            <div class="col-3 col-md-2">
                                <label for="profileName" class="fw-bold">Name:</label>
                            </div>
                            <div class="col-9 col-md-10">
                                <p id="profileName" class="text-secondary">Loading...</p>
                            </div>
                        </div>

                        <div class="row ms-2">
                            <div class="col-3 col-md-2">
                                <label for="profileEmail" class="fw-bold">Email:</label>
                            </div>
                            <div class="col-9 col-md-10">
                                <p id="profileEmail" class="text-secondary">Loading...</p>
                            </div>
                        </div>

                        <div class="row ms-2">
                            <div class="col-3 col-md-2">
                                <label for="profileBio" class="fw-bold">Bio:</label>
                            </div>
                            <div class="col-9 col-md-10">
                                <p id="profileBio" class="text-secondary">Loading...</p>
                            </div>
                        </div>
                        </div>

                        <div class="d-flex justify-content-center">
                            <div class="col-11 col-sm-6">
                                <a type="button" class="btn btn-primary w-100" href="/Auth/EditProfile">Edit Profile</a>
                            </div>
                        </div>
                </div>
            </div>
        </div>
    </div>
</div>
