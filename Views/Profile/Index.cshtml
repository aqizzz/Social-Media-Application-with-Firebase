@{
    ViewData["Title"] = "User Profile";
}

<script src="~/js/profile/profilePage.js" type="module" defer></script>

<div class="container my-4">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">Profile</li>
        </ol>
    </nav>

    <div class="row g-4">
        <!-- Profile Info -->
        <div class="col-md-5 col-xl-4">
            <div class="card shadow-lg border-0">
                <div class="card-body p-3">
                    

                    <div class="d-flex justify-content-center align-items-center mb-3">
                        <img id="profilePicture" src="" alt="Profile Picture" class="rounded-circle border" style="display:none; width:100px; height:100px;" />
                    </div>

                    <!-- Follow Button -->
                    <div class="d-flex justify-content-center align-items-center mb-3 d-none" id="followBtnContainer">
                        <button id="followButton" class="btn btn-success btn-sm" style="width: 100px;">Follow</button>
                    </div>

                    <div class="p-2">
                        <table class="w-100">
                            <tr>
                                <td class="fw-bold">Name:</td>
                                <td><p id="profileName" class="text-secondary mb-1">Loading...</p></td>
                            </tr>
                            <tr>
                                <td class="fw-bold">Email:</td>
                                <td><p id="profileEmail" class="text-secondary mb-1">Loading...</p></td>
                            </tr>
                            <tr>
                                <td class="fw-bold">Bio:</td>
                                <td><p id="profileBio" class="text-secondary mb-1">Loading...</p></td>
                            </tr>
                            <tr>
                                <td class="fw-bold">Followers:</td>
                                <td><p id="profileFollowers" class="text-secondary mb-1">Loading...</p></td>
                            </tr>
                            <tr>
                                <td class="fw-bold" style="width:120px;">Following:</td>
                                <td><p id="profileFollowing" class="text-secondary mb-1">Loading...</p></td>
                            </tr>
                        </table>
                    </div>

                    <div class="d-flex justify-content-center mt-2 d-none" id="editProfileBtnContainer">
                        <div class="col-12">
                            <a type="button" class="btn btn-primary btn-sm w-100" href="/profile/edit">Edit Profile</a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Followers & Following -->
            <div>
                <!-- Followers List -->
                <div class="my-4 card shadow-lg border-0 ">
                    <div class="card-body">
                        <h5 class="fw-bold">Followers</h5>
                        <div id="followersList" class="list-group">
                            <!-- Followers will be dynamically loaded here -->
                        </div>
                    </div>
                </div>

                <!-- Following List -->
                <div class="card shadow-lg border-0">
                    <div class="card-body">
                        <h5 class="fw-bold">Following</h5>
                        <div id="followingList" class="list-group">
                            <!-- Following will be dynamically loaded here -->
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Posts -->
        <div class="col-md-7 col-xl-8">
            <div id="postsFeed" class="posts-container">
                <!-- Feed posts will be dynamically loaded here -->
            </div>
        </div>
    </div>
</div>
