@{
    ViewData["Title"] = "Search Users";
    var query = ViewBag.Query as string;
    var heading = string.IsNullOrEmpty(query) ? "All Users:" : $"Search Results for \"{query}\"";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h2 class="text-primary mb-4">@heading</h2>
            <div id="usersList" class="list-group">
                <!-- Users will be dynamically loaded here by JavaScript -->
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/search/search.js" type="module" defer></script>
}
